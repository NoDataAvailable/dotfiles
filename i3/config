set $mod Mod4

font pango:Roboto Light, Awesome 11

# For i3-gaps: Disable titlebar
for_window [class="^.*"] border pixel 2

# For i3-gaps: Set dem gaps
smart_gaps on
gaps inner 4
gaps outer 1

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# kill focused window
bindsym $mod+Shift+q kill

bindsym $mod+t border toggle

# start dmenu (a program launcher)
bindsym $mod+d       exec rofi -show run
bindsym $mod+Shift+d exec rofi -show ssh
bindsym $mod+Tab     exec rofi -show window
bindsym $mod+p exec dmenu_run
# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
# bindsym $mod+d exec --no-startup-id i3-dmenu-desktop

# Lock the screen
bindsym $mod+l exec "~/bin/fancy_lock"
bindsym $mod+Shift+l exec "~/bin/sleep_suspend.sh"

# Fn Keys
bindsym $mod+F4  fullscreen
bindsym $mod+F5  floating toggle
bindsym $mod+F6  exec "~/bin/brightness down"
bindsym $mod+F7  exec "~/bin/brightness up"
bindsym $mod+F8  exec "amixer -q sset Master toggle"
bindsym $mod+F9  exec "~/bin/vol.sh -"
bindsym $mod+F10 exec "~/bin/vol.sh +"
bindsym $mod+XF86Tools exec "~/bin/fancy_lock"
bindsym $mod+Shift+XF86Tools exec "~/bin/sleep_suspend.sh"

bindsym XF86AudioRaiseVolume exec "~/bin/vol.sh +"
bindsym XF86AudioLowerVolume exec "~/bin/vol.sh -"
bindsym XF86PowerOff exec "~/bin/toggle-menu"

bindsym $mod+BackSpace exec "xdotool key Delete"

# change focus
#bindsym $mod+j focus left
